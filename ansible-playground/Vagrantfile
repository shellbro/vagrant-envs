Vagrant.configure("2") do |config|
  config.vm.define "centos" do |centos|
    centos.vm.box = "centos/7"
    centos.vm.provision "ansible" do |a|
      a.playbook = "site.yml"
      a.sudo = true
    end
  end

  config.vm.define "fedora" do |fedora|
    fedora.vm.box = "fedora/25-cloud-base"
    fedora.vm.provision "shell" do |s|
      s.inline = "dnf -y install python python2-dnf libselinux-python"
    end
    fedora.vm.provision "ansible" do |a|
      a.playbook = "site.yml"
      a.sudo = true
    end
  end

  config.vm.define "debian" do |debian|
    debian.vm.box = "debian/jessie64"
    debian.vm.provision "ansible" do |a|
      a.playbook = "site.yml"
      a.sudo = true
    end
  end
end
