Vagrant.configure("2") do |config|
  config.vm.define "system1" do |system1|
    system1.vm.box = "fedora/25-cloud-base"
    system1.vm.provision "shell" do |s|
      s.inline = "dnf -y install python python2-dnf libselinux-python"
    end
    system1.vm.provision "ansible" do |a|
      a.playbook = "site.yml"
      a.sudo = true
    end
  end

  config.vm.define "system2" do |system2|
    system2.vm.box = "centos/7"
    system2.vm.provision "ansible" do |a|
      a.playbook = "site.yml"
      a.sudo = true
    end
  end
end
